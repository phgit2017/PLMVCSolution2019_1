
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/datatables.css" rel="stylesheet" />
<h2>Index</h2>

<table id="units-tables">
    <thead>
        <tr>
            <td></td>
            <td>Unit ID</td>
            <td>Unit Description</td>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {
        $('#units-tables').DataTable({
            ajax: {
                url: '@Url.Action("GetDetails","Unit")',
                type: 'POST',
                dataSrc: 'data',
                contentType: 'application/json',
                dataType: 'json'
            },
            columns: [
                {
                    data: null, render: function (data, type, row) {
                        return "<a href=''>" + data.UnitId + "</a>";
                    }
                },
                { data: 'UnitId' },
                { data: 'UnitDescription' }
            ]
        });

        //$.ajax({
        //    url: 'Unit/GetDetails',
